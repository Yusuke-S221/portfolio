<div class="form-background">
  <div class="user-form">
    <img src="<%= "/user_image/#{@user.image_name}" %>">
    <div class="name-email">
      <ul>
        <li><%= @user.name %></li>
        <li><%= @user.email %></li>
      </ul>
      <div class="show-user-edit">
        <%= link_to("EDIT", ("/users/edit/#{@user.id}")) %>
        <%= link_to("DELETE", ("/users/delete/#{@user.id}"), {method: "post"}) %>
      </div>
    </div>
  </div>
</div>
