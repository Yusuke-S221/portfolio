<div class="form-background">
  <div class="user-form">
    <%= form_tag("/users/update/#{@user.id}", {multipart: true}) do %>
         <h1>Edit</h1>
         <% @user.errors.full_messages.each do |message| %>
           <div class="form-error">
             <%= message %>
           </div>
         <% end %>
      <p>Select your photo</p>
      <input name="photo" type="file" class="cursor">
      <p>Name</p>
      <input name="name" value="<%= @user.name %>">
      <p>Email</p>
      <br/><input name="email" value="<%= @user.email %>">
      <p>Password</p>
      <br/><input name="password" value="<%= @user.password %>">
      <br/><input type="submit" value="EDIT" class="user-form-btn">
    <% end %>
  </div>
</div>
