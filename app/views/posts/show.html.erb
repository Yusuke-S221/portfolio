<div class="post-show">
  <% if @post %>
  <div class="post-show-image">
    <img src="<%= "/post_photos/#{@post.id}.jpg" %>">
  </div>
  <div class="post-show-right">
    <div class="post-title">
      <h1><%= @post.title %></h1>
    </div>
    <div class="post-content">
      <p><%= @post.content %></p>
    </div>
    <div class="post-show-profile">
    <img src="<%= "/user_image/#{@post.user.image_name}" %>">
    <div class="post-show-profile-right">
    <span><%= @post.user.name %></span>
    <span class="show-created_at"><%= @post.created_at.strftime("%Y-%m-%d   %H:%M") %></span>
    <span class="like-feture show-like-feture">
      <%= Like.where(post_id: @post.id).count %>
    <% if session[:user_id] %>
      <% if Like.find_by(user_id: @current_user.id, post_id: @post.id) %>
        <%= link_to("/likes/delete/#{@post.id}", {method: "post"}) do %>
        <span class="fa fa-heart like-btn-unlike"></span>
        <% end %>
      <% else %>
        <%= link_to("/likes/create/#{@post.id}", {method: "post"}) do %>
        <span class="fa fa-heart like-btn"></span>
        <% end %>
      <% end %>
    <% end %>
    </span>
    </div>
    </div>
  </div>
  <% end %>
</div>
